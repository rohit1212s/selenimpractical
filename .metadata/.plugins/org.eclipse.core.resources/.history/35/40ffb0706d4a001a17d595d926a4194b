			this.url=CommonUtil.getProperty("config","config.url");
		}catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	@BeforeMethod
	public void init() {
		this.driver=BrowserFactory.getBrowser(this.bn, this.rm);
		this.hp=PageFactory.initElements(this.driver, HomePage.class);
	}
